<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rupesh.mapper.UserMapper">

    <resultMap id="baseResultMap" type="com.rupesh.model.UserDTO">
        <result property="email" column="email"/>
        <result property="fullName" column="full_name"/>
        <collection property="address" ofType="com.rupesh.model.AddressDTO">
            <result property="country" column="country"/>
            <result property="city" column="city"/>
            <result property="zone" column="zone"/>
            <result property="street" column="street"/>
        </collection>
    </resultMap>

    <select id="getUser" resultMap="baseResultMap">
        select u.full_name, u.email, a.city, a.country, a.zone, a.street
        from users u
                 left join address a on u.address_id = a.id
        <if test="userId != null">
            where u.id = #{userId}
        </if>
    </select>

</mapper>
